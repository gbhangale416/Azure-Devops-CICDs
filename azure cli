- script: |
    echo "Upgrading Azure CLI to the latest version..."
    curl -sL https://aka.ms/InstallAzureCLIDeb | sudo bash
    sudo az upgrade --yes
  displayName: 'Upgrade Azure CLI to Latest Version'


- script: |
    echo "Downgrading Azure CLI to 2.73.0..."
    curl -sL https://aka.ms/InstallAzureCLIDeb | sudo bash
    sudo az upgrade --version 2.73.0 --yes
  displayName: 'Install Azure CLI 2.73.0'


- script: |
    echo "Installing Azure CLI version 2.74.0..."
    curl -sL https://aka.ms/InstallAzureCLIDeb | sudo bash
    sudo az upgrade --version 2.74.0 --yes
  displayName: 'Install Azure CLI 2.74.0'
